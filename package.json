{
  "name": "better-bull-board",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check",
    "format": "biome format --write",
    "type-check": "turbo run type-check",
    "setup": "turbo run build --filter='@better-bull-board/*'^...",
    "build:app": "turbo run build --filter=@better-bull-board/app --env-mode=loose",
    "build:ingest": "turbo run build --filter=@better-bull-board/ingest --env-mode=loose"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "turbo": "2.7.6",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "_template"
  ]
}
